#!/usr/bin/env ruby
require 'dropsync'

unless ARGV.count == 2
	puts '--- DropSync ---'
	puts 'Oops! No input arguments.'
	puts "\n> Enter your access token and filename, like so:"
	puts "\n$ dropsync access_token filename"
	puts "\n"
	exit
end

access_token, filename = ARGV[0], ARGV[1]

drop_sync = DropSync::Engine.new(access_token)
drop_sync.download(filename)